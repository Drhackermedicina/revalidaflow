{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "../src/**/*.ts",
    "../src/**/*.d.ts",
    "../src/**/*.tsx",
    "../src/**/*.vue",
    "../auto-imports.d.ts",
    "../components.d.ts"
  ],
  "exclude": [
    "../node_modules",
    "../dist"
  ]
}
