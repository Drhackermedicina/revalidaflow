// Snippet de regras Firestore para avaliacoes_ai
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /avaliacoes_ai/{docId} {
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.stationId is string
        && request.resource.data.sessionId is string
        && request.resource.data.timestamp is string
        && request.resource.data.evaluations is map
        && (size(request.resource.data.evaluations) >= 1);
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow update, delete: if false; // somente criação
    }
  }
}
